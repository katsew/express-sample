{
  "apps" : [{
    "name"        : "express-sample",
    "script"      : "server.js",
    "args"        : [],
    "watch"       : true,
    "autorestart"   : true,
    "node_args"   : "",
    "merge_logs"  : false,
    "cwd"         : "./",
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000",
      "DEBUG": "http:*"
    },
    "ignore_watch": ["node_modules", "log", "assets", "pids", "\.git\/"],
    "watch_options": {
      "usePolling": true
    },
    "error_file": "./log/error.log",
    "out_file": "./log/output.log",
    "pid_file": "./pids/app.pid"
  }]
}
